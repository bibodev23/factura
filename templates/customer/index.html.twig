{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
    <h1>Liste des clients</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.name }}</td>
                <td>
                    <a href="{{ path('app_customer_show', {'id': customer.id}) }}" class="btn btn-success">Voir</a>
                    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" class="btn btn-warning">Mettre à jour</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de client trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_customer_new') }}" class="btn btn-success">Créer un nouveau client</a>
{% endblock %}
